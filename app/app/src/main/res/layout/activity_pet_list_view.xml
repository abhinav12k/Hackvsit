<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b"
    tools:context=".PetListView">

    <TextView
        android:id="@+id/yourProfile"
        android:layout_width="205dp"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="User Details"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profilePhoto"
        android:layout_width="131dp"
        android:layout_height="154dp"
        android:layout_marginTop="16dp"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yourProfile"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/username"
        android:layout_width="236dp"
        android:layout_height="91dp"
        android:layout_marginTop="52dp"
        android:gravity="center"
        android:text="Hello Test User"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.388"
        app:layout_constraintStart_toEndOf="@+id/profilePhoto"
        app:layout_constraintTop_toBottomOf="@+id/yourProfile" />

    <ImageView
        android:id="@+id/petImage"
        android:layout_width="174dp"
        android:layout_height="143dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="392dp"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/appicon" />

    <TextView
        android:id="@+id/petDetails"
        android:layout_width="212dp"
        android:layout_height="58dp"
        android:layout_marginBottom="36dp"
        android:gravity="center"
        android:text="Pet Details"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/petImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/petNameTv"
        android:layout_width="163dp"
        android:layout_height="53dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="Shero"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toEndOf="@+id/petImage"
        app:layout_constraintTop_toBottomOf="@+id/petDetails" />

    <TextView
        android:id="@+id/ageTv"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Age  -  2"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toEndOf="@+id/petImage"
        app:layout_constraintTop_toBottomOf="@+id/petNameTv" />

    <TextView
        android:id="@+id/lastVaccinationEt"
        android:layout_width="269dp"
        android:layout_height="63dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:onClick="updateVaccinationDate"
        android:text="Vaccination Date - 21/1/2020"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ageTv" />
</androidx.constraintlayout.widget.ConstraintLayout>